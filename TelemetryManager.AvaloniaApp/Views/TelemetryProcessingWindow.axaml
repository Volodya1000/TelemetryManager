<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TelemetryManager.ViewModels.ViewModelsFolder"
        xmlns:conv="clr-namespace:TelemetryManager.AvaloniaApp.Converters;assembly=TelemetryManager.AvaloniaApp"
        xmlns:packets="using:TelemetryManager.Core.Data.TelemetryPackets"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="TelemetryManager.AvaloniaApp.Views.TelemetryProcessingWindow"
        Title="Telemetry Processing"
        Width="800"
        Height="600"
        x:DataType="vm:TelemetryProcessingViewModel"
        WindowState="Maximized"
        CanResize="False">

  <Grid Margin="10" x:DataType="vm:TelemetryProcessingViewModel">
    <Grid.RowDefinitions>Auto,Auto,Auto,*,Auto</Grid.RowDefinitions>
    <!-- Кнопка выбора файла -->
    <Button Content="Выбрать файл (.bin)"
            Command="{Binding SelectFileCommand}"
            Grid.Row="0"
            Margin="0,0,0,10"/>

    <TextBlock Text="{Binding StatusMessage}"
               Foreground="Red"
               Grid.Row="1"
               Margin="0,0,0,10"/>

    <!-- Фильтры -->
    <Grid ColumnDefinitions="*,*,*,*,*,*"
          RowDefinitions="Auto,Auto"
          Grid.Row="2"
          Margin="0,0,0,10"
          IsEnabled="{Binding HasData}"
          x:DataType="vm:TelemetryProcessingViewModel">

      <TextBlock Text="Дата с:"
                 Grid.Row="0" Grid.Column="0"
                 VerticalAlignment="Center"/>
      <DatePicker SelectedDate="{Binding Filter.DateFrom}"
                  Grid.Row="1" Grid.Column="0"/>

      <TextBlock Text="Дата по:"
                 Grid.Row="0" Grid.Column="1"
                 VerticalAlignment="Center"/>
      <DatePicker SelectedDate="{Binding Filter.DateTo}"
                  Grid.Row="1" Grid.Column="1"/>

      <TextBlock Text="Device ID:"
                 Grid.Row="0" Grid.Column="2"
                 VerticalAlignment="Center"/>
      <TextBox Text="{Binding Filter.DeviceId}"
               Grid.Row="1" Grid.Column="2"/>

      <TextBlock Text="Sensor Type:"
                 Grid.Row="0" Grid.Column="3"
                 VerticalAlignment="Center"/>
      <TextBox Text="{Binding Filter.SensorType}"
               Grid.Row="1" Grid.Column="3"/>

      <TextBlock Text="Sensor ID:"
                 Grid.Row="0" Grid.Column="4"
                 VerticalAlignment="Center"/>
      <TextBox Text="{Binding Filter.SensorId}"
               Grid.Row="1" Grid.Column="4"/>

      <Button Content="Обновить"
              Command="{Binding LoadPacketsCommand}"
              Grid.Row="1" Grid.Column="5"/>
    </Grid>

    <!-- Список (занимает все доступное пространство) -->
    <ListBox ItemsSource="{Binding Packets}"
         Grid.Row="3"
         IsVisible="{Binding HasData}"
         x:DataType="vm:TelemetryProcessingViewModel">
      <ListBox.ItemTemplate>
        <DataTemplate x:DataType="packets:TelemetryPacket">
          <Expander HorizontalContentAlignment="Stretch">
            <!-- Заголовок с основной информацией -->
            <Expander.Header>
              <Grid>
                <StackPanel Orientation="Horizontal" Spacing="10">
                  <TextBlock Text="{Binding DateTimeOfSending}" Width="150"/>
                  <TextBlock Text="{Binding DevId}" Width="100"/>
                  <TextBlock Text="{Binding SensorId.TypeId}" Width="100"/>
                  <TextBlock Text="{Binding SensorId.SourceId}" Width="100"/>
                  <TextBlock Text="{Binding Content.Count, StringFormat='{}Параметров: {0}'}" Width="100"/>
                </StackPanel>
              </Grid>
            </Expander.Header>

            <!-- Детализированное содержимое Content -->
            <Expander.Content>
              <ScrollViewer MaxHeight="200">
                <ItemsControl ItemsSource="{Binding Content}">
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <Grid Margin="5,2" ColumnDefinitions="200, *">
                        <TextBlock Text="{Binding Key}"
                                   FontWeight="Bold"
                                   Grid.Column="0"/>
                        <TextBlock Text="{Binding Value, StringFormat='{}: {0:F2}'}"
                                   Grid.Column="1"/>
                      </Grid>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
              </ScrollViewer>
            </Expander.Content>
          </Expander>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <!-- Пагинация -->
    <Grid Grid.Row="4"
       Margin="0,10"
       IsVisible="{Binding HasData}">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!-- Левая часть - выбор размера страницы -->
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
        <TextBlock Text="Записей на странице:" VerticalAlignment="Center"/>
        <ComboBox ItemsSource="{Binding PageSizeOptions}"
                 SelectedItem="{Binding PageSize}"
                 Width="80"
                 Margin="10,0,0,0"/>
      </StackPanel>

      <!-- Центр - навигация по страницам -->
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="1">
        <Button Content="Предыдущая"
                Command="{Binding PreviousPageCommand}"
                IsEnabled="{Binding CurrentPage, Converter={x:Static conv:IsNotFirstPageConverter.Instance}}"
                Margin="0,0,5,0"/>

        <TextBlock Text="{Binding CurrentPage}" VerticalAlignment="Center"/>
        <TextBlock Text="/" Margin="5,0" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding TotalPages}" Margin="0,0,5,0" VerticalAlignment="Center"/>

        <Button Content="Следующая"
                Command="{Binding NextPageCommand}"
                Margin="0,0,5,0">
          <Button.IsEnabled>
            <MultiBinding Converter="{x:Static conv:LessThanMultiConverter.Instance}">
              <Binding Path="CurrentPage"/>
              <Binding Path="TotalPages"/>
            </MultiBinding>
          </Button.IsEnabled>
        </Button>
      </StackPanel>
    </Grid>
  </Grid>
</Window>