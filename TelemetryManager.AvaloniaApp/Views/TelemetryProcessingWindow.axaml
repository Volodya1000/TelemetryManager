<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TelemetryManager.AvaloniaApp.ViewModels"
        xmlns:packets="using:TelemetryManager.Core.Data.TelemetryPackets"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="TelemetryManager.AvaloniaApp.Views.TelemetryProcessingWindow"
        Title="Telemetry Processing"
        Width="800"
        Height="600"
        x:DataType="vm:TelemetryProcessingViewModel">

  <StackPanel Margin="10">
    <!-- Кнопка выбора файла -->
    <Button Content="Выбрать файл (.bin)" Command="{Binding SelectFileCommand}" Margin="0,0,0,10"/>
    <TextBlock Text="{Binding StatusMessage}" Foreground="Red" Margin="0,0,0,10"/>

    <!-- Фильтры -->
    <Grid ColumnDefinitions="*,*,*,*,*,*" RowDefinitions="Auto,Auto" Margin="0,0,0,10">
      <TextBlock Text="Дата с:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
      <DatePicker SelectedDate="{Binding Filter.DateFrom}" Grid.Row="1" Grid.Column="0"/>

      <TextBlock Text="Дата по:" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"/>
      <DatePicker SelectedDate="{Binding Filter.DateTo}" Grid.Row="1" Grid.Column="1"/>

      <TextBlock Text="Device ID:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"/>
      <TextBox Text="{Binding Filter.DeviceId}" Grid.Row="1" Grid.Column="2"/>

      <TextBlock Text="Sensor Type:" Grid.Row="0" Grid.Column="3" VerticalAlignment="Center"/>
      <TextBox Text="{Binding Filter.SensorType}" Grid.Row="1" Grid.Column="3"/>

      <TextBlock Text="Sensor ID:" Grid.Row="0" Grid.Column="4" VerticalAlignment="Center"/>
      <TextBox Text="{Binding Filter.SensorId}" Grid.Row="1" Grid.Column="4"/>

      <Button Content="Обновить" Command="{Binding LoadPacketsCommand}" Grid.Row="1" Grid.Column="5"/>
    </Grid>

    <ListBox ItemsSource="{Binding Packets}" Height="300">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Expander HorizontalContentAlignment="Stretch">
            <!-- Заголовок с основной информацией -->
            <Expander.Header>
              <Grid>
                <StackPanel Orientation="Horizontal" Spacing="10">
                  <TextBlock Text="{Binding DateTimeOfSending}" Width="150"/>
                  <TextBlock Text="{Binding DevId}" Width="100"/>
                  <TextBlock Text="{Binding SensorId.TypeId}" Width="100"/>
                  <TextBlock Text="{Binding SensorId.SourceId}" Width="100"/>
                  <TextBlock Text="{Binding Content.Count, StringFormat='{}Параметров: {0}'}" Width="100"/>
                </StackPanel>
              </Grid>
            </Expander.Header>

            <!-- Детализированное содержимое Content -->
            <Expander.Content>
              <ScrollViewer MaxHeight="200">
                <ItemsControl ItemsSource="{Binding Content}">
                  <ItemsControl.ItemTemplate>
                    <DataTemplate>
                      <Grid Margin="5,2" ColumnDefinitions="200, *">
                        <TextBlock
                            Text="{Binding Key}"
                            FontWeight="Bold"
                            Grid.Column="0"/>
                        <TextBlock
                            Text="{Binding Value, StringFormat='{}: {0:F2}'}"
                            Grid.Column="1"/>
                      </Grid>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>
              </ScrollViewer>
            </Expander.Content>
          </Expander>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <!-- Пагинация -->
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
      <Button Content="Предыдущая" Command="{Binding PreviousPageCommand}" Margin="0,0,5,0"/>
      <TextBlock Text="{Binding CurrentPage}" VerticalAlignment="Center"/>
      <TextBlock Text="/" Margin="5,0" VerticalAlignment="Center"/>
      <TextBlock Text="{Binding TotalPages}" Margin="0,0,5,0" VerticalAlignment="Center"/>
      <Button Content="Следующая" Command="{Binding NextPageCommand}"/>
    </StackPanel>
  </StackPanel>
</Window>